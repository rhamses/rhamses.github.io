---
export interface Props {
  unit: string;
  value: number;
  title: string;
  link: string;
}

const { unit, value, title, link } = Astro.props;
---


{(link) ? 
  <a href={link} target="_blank" class="card">
    <div class="skill-level">
      <span class="skill--unit">{unit}</span>
      <h2>{value}</h2>
    </div>
    
    <div class="skill-meta">
      <h3>{title}</h3>
      <span><slot></slot></span>
    </div>
  </a>
  : 
  <div class="card">
    <div class="skill-level">
      <span class="skill--unit">{unit}</span>
      <h2>{value}</h2>
    </div>
    
    <div class="skill-meta">
      <h3>{title}</h3>
      <span><slot></slot></span>
    </div>
  </div>
  
}


<style>
  .card {
    display: inline-flex;
    justify-content: center;
    /* height: 200px; */
    background-color: #EEF0F7;
    margin: 7px 5px;
    vertical-align: top;
    border-radius: 10px;
    text-align: center;
    padding: 50px 0;
  }
  
  .card-active,
  .card:hover {
    transform: scale(1.02);
    transition: 0.5s;
    background-color: #fff;
    box-shadow: 0px 5px 50px -8px #ddd;
    cursor: pointer;
  }
  @media(max-width: 425px) {
    .card {
      width: 100%;
      height: auto;
      margin: 10px 0;
      float: left;
    }
  }
  @media(max-width: 768px) {
    .card {
      padding: 15px;
      text-align: left;
    }
    
    .card h2 {
      font-size: 70px;
    }
    
    .card {
      width: 100%;
      height: auto;
      margin: 10px 0;
      float: left;
    }
  }
</style>
