---
export interface Props {
	experience: string;
	title: string;
	description: string;
}

const { experience, title, description } = Astro.props;
---

<div class="list-card">
	{(experience) ? <span class="exp">{experience}</span> : ''}
	<div>
		<h3>{title}</h3>
		<div>
			<slot></slot>
		</div>
	</div>
</div>

<style>
	@media all and (min-width: 0) {
		.list-card {
			display: flex;
		}

		.list-card {
			margin: 30px 0;
		}

		.list-card .exp,
		.list-card div {
			display: inline-block;
			vertical-align: top;
		}

		.list-card .exp {
			margin-right: 15px;
			color: var(--link-color);
			font-weight: 600;
			width: 50px;
		}

		.list-card h3 {
			font-size: 20px;
			font-weight: 600;
			color: var(--title-text);
			line-height: 26px;
			margin-bottom: 8px;
		}

		.list-card div {
			font-size: 1rem;
			color: #81899C;
			line-height: 22px;
		}
	}

	@media all and (min-width: 800px) {
		.list-card .exp {
			width: 100px;
		}

		.list-card div {
			width: 90%
		}
	}
</style>